@model PagedList.IPagedList<WebShopTivi.Models.EF.News>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listrecently = (List<WebShopTivi.Models.EF.News>)ViewBag.ListRecently;

    var listtag = (List<WebShopTivi.Models.EF.Tag>)ViewBag.ListTag;
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/trang-chu">Trang chủ</a></li>
                        <li>Tin tức</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--blog area start-->
<div class="blog_page_section blog_sidebar blog_reverse mt-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-12">
                <div class="blog_sidebar_widget">

                    <div class="widget_list widget_tag">
                        <h3>Tag tin tức</h3>
                        <div class="tag_widget">
                            <ul>
                                @foreach (var item in listtag)
                                {
                                    <li><a href="/News/SearchNews?searchString=@item.Name">@item.Name</a></li>
                                }


                            </ul>
                        </div>
                    </div>
                    <div class="widget_list widget_post">
                        <h3>Bài đăng gần đây</h3>
                        @foreach (var item in listrecently)
                        {
                            <div class="post_wrapper">
                                <div class="post_thumb">
                                    <a href="/News/Detail/@item.Id"><img src="@item.Image" alt=""></a>
                                </div>
                                <div class="post_info">
                                    <h3><a href="/News/Detail/@item.Id">@item.Name</a></h3>
                                    <span>@item.CreateDate.Value.Date </span>
                                </div>
                            </div>
                        }


                    </div>



                </div>
            </div>
            <div class="col-lg-9 col-md-12">
                <div class="blog_wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="single_blog">
                            <div class="blog_thumb">
                                <a href="/News/Detail/@item.Id"><img src="@item.Image" alt=""></a>
                            </div>
                            <div class="blog_content">
                                <h3><a href="/News/Detail/@item.Id">@item.Name</a></h3>
                                <div class="blog_meta">
                                    <span class="post_date"><i class="fa-calendar fa"></i> @item.CreateDate</span>
                                    <span class="author"><i class="fa fa-user-circle"></i> Posts by : admin</span>
                                    <span class="category">
                                        <i class="fa fa-folder-open"></i>
                                        <a href="/News/SearchNews?searchString=@item.Tag.Name">@item.Tag.Name</a>
                                    </span>
                                </div>
                                <div class="blog_desc">
                                    <p>
                                        @item.Description
                                    </p>
                                </div>
                                <div class="readmore_button">
                                    <a href="/News/Detail/@item.Id">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.SearchString }))
                </div>
            </div>

        </div>
    </div>
</div>
<!--blog area end-->
<div style="margin-left:400px;">
    
</div>

