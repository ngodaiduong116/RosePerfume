@section Scripts{
    <script>
        var account = {
            init: function () {
                account.registerEvents();
            },
            registerEvents: function () {
                $('.btn-active').off('click').on('click', function (e) {
                    e.preventDefault();
                    var btn = $(this);
                    var id = btn.data('id');
                    $.ajax({
                        url: "/Admin/Account/ChangeStatus",
                        data: { id: id },
                        dataType: "json",
                        type: "POST",
                        success: function (response) {
                            console.log(response);
                            if (response.status == true) {
                                btn.text('Kích hoạt');
                            }
                            else {
                                btn.text('Khóa');
                            }
                        }
                    })
                });
            },
        }
        account.init();
    </script>
}