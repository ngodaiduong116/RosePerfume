@model PagedList.IPagedList<WebShopTivi.Models.EF.Account>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tài khoản</h2>


<a href="/Admin/Account/Create" class="btn btn-success" style="margin-bottom:10px;float:left;">Tạo mới</a>


@using (Html.BeginForm("Index", "Account", FormMethod.Get))
{
    <div class="input-group mb-2" style="float:right;">
        <input type="text" class="col-lg-4 form-control" style="width:400px;display:inline;margin-right:5px;" name="searchString" value="@ViewBag.SearchString" placeholder="Tìm kiếm..." />

        <button class="btn btn-primary" type="submit">
            Tìm kiếm
        </button>

    </div>

}
<div>@Html.Raw(ViewBag.Respon)</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Tài khoản
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Tên đầy đủ
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Hành động
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    <img src="@item.Image" style="width:200px;height:125px;border-radius:15px;" alt="Alternate Text" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    <a href="#" class="btn-active btn btn-primary btn-sm" data-id="@item.Id">@(item.Status ? "Kích hoạt" : "Khóa")</a>
                </td>
                <td>
                    <a href="/Admin/Account/Edit/@item.Id" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></a>

                    <a onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này?')" href="/Admin/Account/Delete/@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        </tbody>
    }

</table>
@if (Model.Count() <= 0)
{
    <div class="text-center text-danger">Không có dữ liệu</div>
}
