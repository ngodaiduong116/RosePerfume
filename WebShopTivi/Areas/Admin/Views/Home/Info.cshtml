@model WebShopTivi.Models.EF.Account
@{
    ViewBag.Title = "Info";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var user = ViewBag.UserAdmin;
}

<h2>Thông tin tài khoản</h2>


<h6>Tên tài khoản</h6>
<input type="text" name="name" value="@Model.Username" style="width: 250px;height:35px;border-radius:5px;padding:10px;border:1px solid #797777" />
<h6 class="mt-3">Hình ảnh</h6>
<img src="@Model.Image" alt="Alternate Text" style="width:300px;height:300px;border-radius:15px;"/>
<h6 class="mt-3">Tên đầy đủ</h6>
<input type="text" name="name" value="@Model.Fullname" style="width: 250px;height:35px;border-radius:5px;padding:10px;border:1px solid #797777"/>

