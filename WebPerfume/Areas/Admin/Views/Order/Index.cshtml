@model List<WebPerfume.Models.EF.Order>
@using PagedList.Mvc;
@using WebPerfume.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Đơn hàng</h2>

@*<a href="/Admin/Category/Create" class="btn btn-success" style="margin-bottom:10px;float:left;">Tạo mới</a>*@
@using (Html.BeginForm("ExportToExcel", "Order", FormMethod.Post))
{
    <input type="submit" value="Export to Excel" class="btn btn-success mb-2" />
}

@using (Html.BeginForm("Index", "Order", FormMethod.Get))
{

    <div class="input-group mb-2" style="float:right;">
        <input type="text" class="col-lg-4 form-control" style="width:400px;display:inline;margin-right:5px;" name="searchString" value="@ViewBag.SearchString" placeholder="Tìm kiếm..." />

        <button class="btn btn-primary" type="submit">
            Tìm kiếm
        </button>
    </div>

}
<table class="table mt-2">
    <thead class="thead-dark">
        <tr>
            <th>
                Tên khách hàng
            </th>
            <th>
                Điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Email
            </th>
            <th>
                Tạo ngày
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Hành động
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipMobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td style=" display: flex; justify-content: center;">
                    @{
                        if (item.Status == EnumStatus.New)
                        {
                            <span style="text-align: center; width: 75px; border: 1px solid #309702; padding: 4px; border-radius: 5px; background-color: #309702; color: white;">New</span>
                        }
                        else if (item.Status == EnumStatus.Pendding)
                        {
                            <span style="text-align: center; width: 75px; border: 1px solid #d39700; padding: 4px; border-radius: 5px; background-color: #d39700; color: white; ">Pendding</span>
                        }
                        else
                        {
                            <span></span>
                        }
                    }
                </td>
                <td>
                    @{
                        if (item.Status == EnumStatus.New)
                        {
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info dialog-link">Chi Tiết</a>
                            <a onclick="return confirm('Bạn có chắc chắn muốn nhận đơn hàng này?')" href="/Admin/Order/HandleNewOrder/@item.Id" class="btn btn-warning mt-2">Nhận Đơn</a>
                            <a onclick="return confirm('Bạn có chắc chắn muốn Hủy đơn hàng này?')" href="/Admin/Order/Delete/@item.Id" class="btn btn-danger mt-2">Hủy Đơn</a>
                        }
                        else if (item.Status == EnumStatus.Pendding)
                        {
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info dialog-link">Chi Tiết</a>
                            <a onclick="return confirm('Bạn có chắc chắn  đơn khách hàng từ chối đơn hàng này?')" href="/Admin/Order/HandlePendding/@item.Id" class="btn btn-danger mt-2">Từ chối</a>
                            <a onclick="return confirm('Bạn có chắc chắn hoàn thành đơn hàng này?')" href="/Admin/Order/HandleApprove/@item.Id" class="btn btn-success mt-2">Hoàn Thành</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info dialog-link">Chi Tiết</a>
                        }
                    }
                </td>
            </tr>
        </tbody>
    }
</table>

@if (Model.Count() <= 0)
{
    <div class="text-center text-danger">Không có dữ liệu</div>
}