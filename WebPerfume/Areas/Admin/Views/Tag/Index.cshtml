@model IEnumerable<WebPerfume.Models.EF.Tag>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tag</h2>

<a href="/Admin/Tag/Create" class="btn btn-success" style="margin-bottom:10px;float:left;">Tạo mới</a>

<table class="table thead-dark">
    <tr class="thead-dark">
        <th>
            Tên
        </th>
        <th>
            Trạng thái
        </th>
        <th>Hành động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Status == true)
                {
                    <p class="badge badge-success">Kích hoạt</p>
                }
                else
                {
                    <p class="badge badge-danger">Khóa</p>
                }
            </td>
            <td>
                <a href="/Admin/Tag/Edit/@item.Id" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></a>

                <a onclick="return confirm('Bạn có chắc chắn muốn xóa tin tức này?')" href="/Admin/Tag/Delete/@item.Id" class="btn btn-danger" style="margin-left:10px"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }

</table>
@if (Model.Count() <= 0)
{
    <div class="text-center text-danger">Không có dữ liệu</div>
}
