@model PagedList.IPagedList<WebPerfume.Models.EF.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var listall = (List<WebPerfume.Models.EF.Product>)ViewBag.ListAll;
}

<h2>Sản phẩm</h2>


<a href="/Admin/Product/Create" class="btn btn-success" style="margin-bottom:10px;float:left;">Tạo mới</a>
<a href="/Admin/Product/Import" class="btn btn-success" style="margin-left:10px;float:left;">Import Excel</a>

@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{

    <div class="input-group mb-2" style="float:right;">
        <input type="text" class="col-lg-4 form-control" style="width:400px;display:inline;margin-right:5px;" name="searchString" value="@ViewBag.SearchString" placeholder="Tìm kiếm..." />

        <button class="btn btn-primary" type="submit">
            Tìm kiếm
        </button>

    </div>

}
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Tên
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Giá
            </th>
            <th>
                Xuất xứ
            </th>
            <th>
                Năm sản xuất
            </th>
            <th>
                Hàng tồn
            </th>
            <th>
                Tạo ngày
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Hành động
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@item.Image" style="width:200px;height:125px;" alt="Alternate Text" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @if (item.Quantity > 0)
                    {
                        <p class="badge badge-success">Còn hàng</p>
                    }
                    else
                    {
                        <p class="badge badge-danger">Hết hàng</p>
                    }
                </td>
                <td>
                    <a href="/Admin/Product/Details/@item.Id" class="btn btn-success mb-2"><i class="fas fa-info"></i></a>
                    <a href="/Admin/Product/Edit/@item.Id" class="btn btn-warning mb-2"><i class="fas fa-pencil-alt"></i></a>
                    <a onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?')" href="/Admin/Product/Delete/@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        </tbody>
    }

</table>

@if (Model.Count() <= 0)
{
    <div class="text-center text-danger">Không có dữ liệu</div>
}
