@model WebPerfume.Models.ChangePaswordModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .classForm > form {
        width: 100%;
    }
</style>
<div class="container">
    <br />
    <div class="row">
        <h2>Thay Đổi Mật Khẩu</h2>
    </div>
    <hr />
    <div class="row classForm">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.CurrentPaswordId, htmlAttributes: new { @class = "control-label col-md-4" }, labelText: "Mật Khẩu Hiện Tại")
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.CurrentPaswordId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CurrentPaswordId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NewPaswordId, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Mật Khẩu Mới")
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.NewPaswordId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NewPaswordId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CfPaswordId, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Xác Nhận Mật Khẩu")
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.CfPaswordId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CfPaswordId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <input type="submit" value="Lưu Mật Khẩu" class="btn btn-success" />
                        </div>
                        <div class="col-md-2">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                    @*<div class="col-md-offset-2 col-md-6">
                        </div>
                        <div class="col-md-offset-2 col-md-6">
                        </div>*@
                </div>
            </div>
        }
    </div>
</div>