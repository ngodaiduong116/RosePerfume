@model List<WebPerfume.Models.CartOfCustomer>
@using System.Globalization;
@using WebPerfume.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebPerfume.Models.EF.Customer cus = ViewBag.Customer;
}
<br />
<div class="container-customer">
    <div class="container">
        <div class="row">
            <div class="cus-displayAvta">
                <div class="cus-avata">
                    <div class="cus-box-image">
                        <img src="@cus.Image" />
                    </div>
                </div>
                <div class="cus-name">
                    <h3>@cus.Name <br /><br /> @cus.Mobile</h3>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="cus-information">
                <div class="col-md-12">
                    <div class="cus-title-information">
                        <h3>Thông Tin Cá Nhân</h3>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row cus-itemRow">
            <div class="col-md-2">
                <div class="cus-item-title">
                    Tên Khách Hàng:
                </div>
            </div>
            <div class="col-md-10">
                <div class="cus-item-content">
                    @cus.Name
                </div>
            </div>
        </div>
        <div class="row cus-itemRow">
            <div class="col-md-2">
                <div class="cus-item-title">
                    Địa Chỉ:
                </div>
            </div>
            <div class="col-md-10">
                <div class="cus-item-content">
                    @cus.Address
                </div>
            </div>
        </div>
        <div class="row cus-itemRow">
            <div class="col-md-2">
                <div class="cus-item-title">
                    Số Điện Thoại:
                </div>
            </div>
            <div class="col-md-10">
                <div class="cus-item-content">
                    @cus.Mobile
                </div>
            </div>
        </div>
        <div class="row cus-itemRow">
            <div class="col-md-2">
                <div class="cus-item-title">
                    Email:
                </div>
            </div>
            <div class="col-md-10">
                <div class="cus-item-content">
                    @cus.Email
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="cus-information">
                <div class="col-md-12">
                    <div class="cus-title-information">
                        <h3>Thông Tin Đơn Hàng</h3>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-12">
                <div class="table_desc">
                    <div class="cart_page table-responsive">
                        @if (Model.Count > 0)
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product_remove">STT</th>
                                        <th class="product_thumb">Ngày Mua</th>
                                        <th class="product_name">Tổng Tiền</th>
                                        <th class="product_quantity">Số lượng</th>
                                        <th class="product-price"></th>
                                        <th class="product-status">Trạng Thái</th>
                                        <th class="product_total"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td class="product_remove">
                                                @item.STT
                                            </td>
                                            <td class="product_thumb">
                                                @item.Created
                                            </td>
                                            <td class="product_name">
                                                @double.Parse(@item.totalBill.ToString()).ToString("#,###", CultureInfo.GetCultureInfo("vi-VN").NumberFormat) VNĐ
                                            </td>
                                            <td class="product_quantity">
                                                @item.quantity
                                            </td>
                                            <td class="product_price">
                                                @{
                                                    if (item.Stautus == EnumStatus.New)
                                                    {
                                                        <i class="fas fa-check-circle" style="color: blue;"></i>
                                                    }
                                                    else if (item.Stautus == EnumStatus.Pendding)
                                                    {
                                                        <i class="fas fa-check-circle" style="color: orange;"></i>
                                                    }
                                                    else if (item.Stautus == EnumStatus.Approved)
                                                    {
                                                        <i class="fas fa-check-circle" style="color: #4caf50;"></i>
                                                    }
                                                    else if (item.Stautus == EnumStatus.Cancel)
                                                    {
                                                        <i class="fas fa-check-circle" style="color: #d50000;"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-check-circle" style="color: #df8d13;"></i>
                                                    }
                                                }
                                            </td>
                                            <td class="product_status">
                                                @{
                                                    if (item.Stautus == EnumStatus.New)
                                                    {
                                                        <span>Đơn Chờ Xác Nhận</span>
                                                    }
                                                    else if (item.Stautus == EnumStatus.Pendding)
                                                    {
                                                        <span>Đơn Đang Ship</span>
                                                    }
                                                    else if (item.Stautus == EnumStatus.Approved)
                                                    {
                                                        <span>Đơn Hoàn Thành</span>
                                                    }
                                                    else if (item.Stautus == EnumStatus.Cancel)
                                                    {
                                                        <span>Đơn Bị Hủy</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Đơn Từ Chối</span>
                                                    }
                                                }
                                            </td>
                                            <td class="product_total">
                                                @{
                                                    <a style="color: white;" href="@Url.Action("Details", new { id = item.OrderId })" class="btn btn-info dialog-link-customer">Chi Tiết Đơn Hàng</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <span class="alert alert-danger">Bạn chưa mua sản phẩm nào tại cửa hàng</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>