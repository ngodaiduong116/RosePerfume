<script type="text/javascript">

    function handleChangeQuantry(totalQuantity, valueChange, valuePre) {
        console.log(totalQuantity);
        console.log(valueChange);
        console.log(valuePre);

        if (parseInt(valuePre) > 0) {
            if (parseInt(totalQuantity) == parseInt(valuePre)) {
                swal("Rose Perume Notification", "The product already exists in the cart and has a maximum quantity")
                    .then(() => {
                    $("#quantityprod").val(1);
                });                
            } else {
                if (parseInt(totalQuantity) < parseInt(valueChange)) {
                    swal("Rose Perume Notification", "The quantity you selected has reached the maximum for this product")
                        .then(() => {
                            $("#quantityprod").val(totalQuantity);
                        });
                }
            }
        } else {
            if (parseInt(totalQuantity) < parseInt(valueChange)) {
                swal("Rose Perume Notification", "The quantity you selected has reached the maximum for this product")
                    .then(() => {
                        $("#quantityprod").val(totalQuantity);
                    });
            }
        }
    }
</script>