                                            </tr>
                                            <tr>
                                                <td class="first_child">Xuất xứ</td>
                                                <td>@Model.Origin</td>
                                            </tr>
                                            <tr>
                                                <td class="first_child">Năm sản xuất</td>
                                                <td>@Model.ReleaseYear</td>
                                            </tr>
                                            <tr>
